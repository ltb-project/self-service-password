{% macro show_result(result) %}
    <div class="result alert alert-{{ result|criticality }}">
        <p><i class="fa fa-fw {{ result|fa_class }}" aria-hidden="true"></i> {{ result|trans }}</p>
    </div>
{% endmacro %}

{% macro row_input_text(id, label, icon, placeholder, default_value, disabled) %}
    <div class="form-group">
        <label for="{{ id }}" class="col-sm-4 control-label">{{ label|trans }}</label>
        <div class="col-sm-8">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-fw fa-{{ icon }}"></i></span>
                <input {% if disabled|default(false) %}disabled{% endif %} name="{{ id }}" id="{{ id }}" value="{{ default_value|default('') }}" class="form-control" placeholder="{{ placeholder|trans }}" />
            </div>
        </div>
    </div>
{% endmacro %}

