<html lang="{{ lang }}">
<head>
{% block head %}
    <title>{% block title %}{{ 'title'|trans }}{% endblock %}</title>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="LDAP Tool Box" />
    <link href="{{ asset('images/favicon.ico') }}" rel="icon" type="image/x-icon" />
    <link href="{{ asset('images/favicon.ico') }}" rel="shortcut icon" />
    <link href="{{ app.request.baseUrl }}" />
    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}" />
        {% if background_image is not empty %}
            <style>
                html, body {
                    background: url({{ background_image }}) no-repeat center fixed;
                    background-size: cover;
                }
            </style>
        {% endif %}
    {% endblock %}
{% endblock %}
</head>
<body>
{% block body %}
<div class="container">
    <div class="panel panel-success">
        <div class="panel-body">
            {% if show_menu %}
                {% include 'menu.html.twig' %}
            {% else %}
                <div class="title alert alert-success text-center"><h1>{{ 'title'|trans }}</h1></div>
            {% endif %}

            {% if logo %}
                <a href="{{ path('homepage') }}" alt="Home">
                    <img src="{{ logo }}" alt="Logo" class="logo img-responsive center-block" />
                </a>
            {% endif %}

            {% block main %}
            {% endblock %}
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</body>
</html>